  added = green
  changed = blue
  untracked = magenta
  deleted = red

[diff]
  tool = beyondcompare
  guitool = beyondcompare

[difftool]
  prompt = false

[mergetool]
  keepBackup = false
  prompt = false

[alias]
	today = log --since=midnight --author='Nicolas Pernas Maradei' --oneline

[push]
